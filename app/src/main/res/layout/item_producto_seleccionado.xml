<!-- item_producto_seleccionado.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Imagen del producto -->
    <ImageView
        android:id="@+id/ivProducto"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/imagen_default" />

    <!-- Detalles del producto -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <!-- Nombre del producto -->
        <TextView
            android:id="@+id/tvNombreProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Producto"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <!-- Precio del producto -->
        <TextView
            android:id="@+id/tvPrecioProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio: $0.00"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- BotÃ³n para eliminar el producto -->
    <ImageButton
        android:id="@+id/btnEliminarProducto"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@android:drawable/ic_delete" />
</LinearLayout>
